<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/epi_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cust="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/epi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Episode"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot"
                android:layout_marginRight="8dp"
                android:id="@+id/epi_indicator"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/epi_pubdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Pubdate"
                android:layout_toRightOf="@+id/epi_indicator"
                android:layout_toEndOf="@+id/epi_indicator"
                android:textColor="@color/text_grey"
                android:textSize="14sp"/>

        </RelativeLayout>



    </LinearLayout>


</LinearLayout>